<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_centerHorizontal="true"
    android:background="@color/transparent"
    android:orientation="vertical">

    <Button
        android:id="@+id/ivSubmittTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text=" Submit" />

    <EditText
        android:id="@+id/etEndTime"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivSubmittTimer"
        android:layout_toEndOf="@+id/ivSubmittTimer"
        android:layout_toRightOf="@+id/ivSubmittTimer"
        android:background="@drawable/et_background"
        android:focusable="false"
        android:focusableInTouchMode="false"

        android:inputType="time" />

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etStarttime"
        android:layout_alignBottom="@+id/etStarttime"
        android:layout_centerHorizontal="true"
        android:text="To"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etStarttime"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="56dp"
        android:layout_toLeftOf="@+id/ivSubmittTimer"
        android:layout_toStartOf="@+id/ivSubmittTimer"
        android:background="@drawable/et_background"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="time"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Timer"
        android:textSize="22dp" />

</RelativeLayout>